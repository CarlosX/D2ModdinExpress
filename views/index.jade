extends layout

block body
  div(ng-view,style="width:100%;height:100%")

  div(ng-controller="BottomBarCtrl")
    .statusBar(ng-if="auth.isAuthed")
      .left
        i.fa.fa-tachometer 
        span.status  {{status.managerStatus}}
      .rightButtons
        a.btn.btn-danger(href="https://github.com/kidovate/d2moddinclient",target="_blank")
          | Report Issues
        a.btn.btn-info(href="https://github.com/kidovate/d2moddinclient",target="_blank")
          | Source
        button.btn.btn-success(ng-if="!status.managerConnected",ng-click="launchManager()")
          | Download Launcher

  script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js")
  script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js')
  script(src='//cdn.jsdelivr.net/pnotify/2.0.0/pnotify.all.min.js')
  script(src="/js/lib/wizard/bootstrap-wizard.js")
  script(src='/js/fixpnotify.js')
  script(src='/js/lib/xsockets/xsockets.min.js')
  script(src='/js/lib/angular/angular.min.js')
  script(src='/js/lib/angular/angular-route.min.js')
  script(src='/js/analytics.js')
  script(src='/js/lib/angularitics/angulartics.min.js')
  script(src='/js/lib/angularitics/angulartics-ga.min.js')
  script(src='/js/lib/bootbox/bootbox.min.js')
  script(src='/js/app.js')
  script(src='/js/services.js')
  script(src='/js/controllers.js')
  script(src='/js/filters.js')
  script(src='/js/directives.js')
