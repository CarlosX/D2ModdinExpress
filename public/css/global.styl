.llrow
  overflow: hidden
  box-sizing:border-box
  padding:0;
  margin:0;
  width: 100%

.llrow td
  height: 100% !important;

.llrow.ng-enter
  transition: all ease-in 1s;
  height: 0 !important;
  max-height: 0 !important;
  opacity: 0;

.llrow.ng-move
  transition: all ease-in 1s;

.llrow.ng-enter-active
  height: 51px !important;
  max-height: 0 !important;
  opacity: 1;

.llrow.ng-leave
  transition: all ease-in 1s;
  height: 51px !important;
  max-height: 51px !important;
  opacity: 1;

.llrow.ng-leave-active
  height: 0 !important;
  max-height: 51px !important;
  opacity: 0;
.fade {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    opacity: 1;
}
.fade.ng-enter,
.fade.ng-leave {
    transition: all 0.3s ease;
}
.fade.ng-enter {
    opacity: 0;
}
.fade.ng-enter-active {
    opacity: 1;
}
.fade.ng-leave {
    opacity: 1;
}
.fade.ng-leave-active {
    opacity: 0;
}
